{
	"compilerOptions": {
		"strict": false,
		"allowJs": true,
		"lib": ["es2019", "dom"],
		"target": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"module": "ESNext",
		"noEmit": true,
		"jsx": "react",
	},
	"include": [
		"../../node_modules/@types/node/**/*",
		"scripts",
		"test",
		"src",
	],
	"exclude": [
		"node_modules"
	]
}
